<%= stylesheet_link_tag "https://getbootstrap.com/docs/4.0/examples/signin/signin.css" %>

<div class="container">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-signin"}) do |f| %>
    <h2 "form-signin-heading"><%= t(".sign_in") %></h2>
      <%= f.label :email, class: "sr-only" %>
      <%= f.text_field :email, placeholder: "Email address", required: false, autofocus: true, class: "form-control", id: "inputEmail" %>
      <%= f.label :password, class: "sr-only" %>
      <%= f.text_field :password, placeholder: "Password", required: false, class: "form-control", id: "inputPassword" %>
      <!-- <div class="checkbox">
        <%#= f.check_box :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div> -->
      <%= f.submit t(".sign_in"), class: "btn btn-lg btn-primary btn-block" %>
  <% end %>
</div> <!-- /container -->

<%= render "devise/shared/links" %>
